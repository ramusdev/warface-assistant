<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApexLegendsAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="navigationViewStyle">@style/NavigationDrawerStyle</item>
    </style>

    <style name="Theme.ApexLegendsAssistant.NoActionBar">
        <!-- <item name="windowActionBar">true</item> -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApexLegendsAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ApexLegendsAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>