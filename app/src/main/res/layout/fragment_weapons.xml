<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/raw_background"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/maps_logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/weapons"
        android:src="@drawable/enginer_cp2veresk" />

    <TextView
        android:id="@+id/maps_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maps_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="Модифицированный вариант винтовки AUG A3 с утяжеленным стволом, применяемый в качестве ручного пулемета."
        android:textColor="#4a4a49"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/maps_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maps_descript"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:text="На время"
        android:textColor="#4a4a49"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/maps_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/maps_descript"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="5dp"
        android:text="MSBS Radon"
        android:background="@color/black"
        android:textColor="@color/orange" />

</RelativeLayout>
