<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:fillViewport="true"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/data_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/greylite"
            android:text="Nickname" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ранг"
                android:layout_alignParentStart="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="90"
                android:textColor="@color/greylite"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опыт"
                android:layout_alignParentStart="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="564654"
                android:textColor="@color/greylite"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_clanname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название клана"
                android:layout_alignParentStart="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_clanname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="clanname"
                android:textColor="@color/greylite"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_kill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Убийств"
                android:layout_alignParentStart="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_kill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="5446231"
                android:textColor="@color/greylite"
                android:textSize="15sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/text_pvptitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/greylite"
            android:text="Статистика PVP" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_pvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Убийств / Смертей"
                android:layout_alignParentStart="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_pvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2.5"
                android:textColor="@color/greylite"
                android:textSize="15sp" />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/text_pvetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/greylite"
            android:text="Статистика PVE" />
    </LinearLayout>
</ScrollView>