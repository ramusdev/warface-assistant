<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:fillViewport="true"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/data_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:text="Nickname" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_userid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Идентификатор"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_userid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="d5113rhe4443g"
                android:textColor="@color/greylite"
                android:textSize="17sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_experience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Опыт"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_experience"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="82456454"
                android:textColor="@color/greylite"
                android:textSize="17sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_clanname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Имя клана"
                android:textColor="@color/grey"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/data_clanname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="Clanname"
                android:textColor="@color/greylite"
                android:textSize="17sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@color/divider"/>
    </LinearLayout>
</ScrollView>