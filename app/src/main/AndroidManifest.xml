<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rb.dev.warfaceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="android.max_aspect" android:value="2.1" />
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID" android:value="ca-app-pub-4140002463111288/3644037371"/>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>

        <activity android:name="rb.dev.warfaceapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="rb.dev.warfaceapp.RiflemanWebActivity" />
        <activity android:name="rb.dev.warfaceapp.SniperWebActivity" />
        <activity android:name="rb.dev.warfaceapp.MedicWebActivity" />
        <activity android:name="rb.dev.warfaceapp.EnginerWebActivity" />
        <activity android:name="rb.dev.warfaceapp.MapsWebActivity" />
        <activity android:name="rb.dev.warfaceapp.NewsWebActivity" />
        <activity android:name="rb.dev.warfaceapp.StremersActivity" />
        <activity
            android:name="rb.dev.warfaceapp.ConnectionActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme"></activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>